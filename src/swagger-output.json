{
  "swagger": "2.0",
  "info": {
    "title": "Task API",
    "description": "Dokumentation f√ºr alle Endpunkte der Task API",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "",
        "responses": {
          "301": {
            "description": "Moved Permanently"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "User"
        ],
        "description": "Endpoint to login a user.",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Details of the user to add.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "desk@library.example"
                },
                "password": {
                  "type": "string",
                  "example": "m295"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/verify": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Endpoint to verify if the user is logged in.",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/logout": {
      "delete": {
        "tags": [
          "User"
        ],
        "description": "Endpoint to logout a user.",
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/tasks/": {
      "get": {
        "tags": [
          "Task"
        ],
        "description": "Endpoint to get the list of tasks.",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Task"
        ],
        "description": "Endpoint to add a new task.",
        "parameters": [
          {
            "name": "task",
            "in": "body",
            "description": "Details of the task to add.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "Titel": {
                  "type": "string",
                  "example": "Task title"
                },
                "Beschreibung": {
                  "type": "string",
                  "example": "Task description"
                },
                "DueDate": {
                  "type": "string",
                  "example": "2024-12-31"
                },
                "ResolvedDate": {
                  "type": "string",
                  "example": "2024-11-30"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "403": {
            "description": "Forbidden"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/tasks/{id}": {
      "get": {
        "tags": [
          "Task"
        ],
        "description": "Endpoint to get a task by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the task."
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "tags": [
          "Task"
        ],
        "description": "Endpoint to update a task.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the task."
          },
          {
            "name": "task",
            "in": "body",
            "description": "Updated details of the task.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "Titel": {
                  "type": "string",
                  "example": "Updated task title"
                },
                "Beschreibung": {
                  "type": "string",
                  "example": "Updated task description"
                },
                "DueDate": {
                  "type": "string",
                  "example": "2024-12-31"
                },
                "ResolvedDate": {
                  "type": "string",
                  "example": "2024-11-30"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "patch": {
        "tags": [
          "Task"
        ],
        "description": "Endpoint to partially update a task.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the task."
          },
          {
            "name": "task",
            "in": "body",
            "description": "Details of the task to update.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "Titel": {
                  "type": "string",
                  "example": "Updated task title"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Task"
        ],
        "description": "Endpoint to delete a task by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the task."
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}